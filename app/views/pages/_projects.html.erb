<section id="projects">
  <h3>Pick a Project to Work On</h3>
  <p><%= link_to "Create a new project", new_project_path %></p>
  <div class="contents">
    <%- @projects.each do |project| %>
      <article id="<%= project.dom_id %>">
        <header>
          <h3>
            <%= link_to project.name, new_project_log_path(project), id: "#{project.id}_new_log_entry" %>
            &mdash;
            <%= link_to "Edit", edit_project_path(project) %>
          </h3>
        </header>
        <p><%= project.capacity_remaining %> of work left</p>
        <p><%= project.weekly_capacity_remaining %> of <%= project.weekly_burn_rate %> per week</p>
        <p><%= project.recent_capacity_remaining %> of <%= project.weekly_burn_rate %> in the past 7 days</p>
        <p><%- project.quality_by_week.each do |face| %><%= face %><%- end %></p>

        <footer>
          <%= link_to "Start Work", new_project_log_path(project), class: "btn" %>
        </footer>
      </article>
    <% end %>
  </div>
</section>
