<section id="week_in_review">
  <h3> Your Week In Review: </h3>
  <p>Your Weekly Expected Capacity: <%= current_account.weekly_expected_capacity %> </p>
  <p>Your Personal Remaining Capacity: <%= current_account.remaining_personal_capacity %> </p>
</section>

<section id="projects">
  <h3>Pick a Project to Work On</h3>
  <%- @projects.each do |project| %>
    <article>
      <%= link_to_new_log_entry(project) %>
      <header>
        <h3><%= project.name %></h3>
      </header>
      <p><%= project.capacity_remaining %> capacity remaining</p>
      <p><%= project.weekly_burn_rate %> weekly burn rate </p>
    </article>
  <% end %>
</section>

<section id="recent_logs">
<h3>Recently Logged Capacity</h3>
<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Capacity Worked</th>
      <th>Date Worked</th>
      <th>Billable?</th>
      <th></th>
    </tr>
  </thead>
  <%- current_account.recent_logs.each do |log| %>
    <tr id="<%=log.dom_id%>">
      <td><%= log.project.name %></td>
      <td><%= log.amount %></td>
      <td><%= log.worked_at %></td>
      <td><%= log.billable? %></td>
      <td><%= link_to "Delete", log_path(log), method: :delete %></td>
    </tr>
  <%- end %>
</table>
</section>
