<%= form_for @project do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :capacity %>
  <%= f.number_field :capacity %>

  <%= f.label :weekly_burn_rate %>
  <%= f.number_field :weekly_burn_rate %>

  <%= f.label "" do %>
    <%= f.check_box :billable %>
    Billable?
  <% end %>

  <%= f.label "" do %>
    <%= f.check_box :active %>
    Active?
  <% end %>

  <%= f.submit "Create project" %>
<% end %>